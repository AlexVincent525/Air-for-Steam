resource/layout/uistatuspanel.layout {

	styles {
		CUIStatusPanel {
		}

		SlimProgressBar {
			textcolor=none
			bgcolor=none
			render_bg {
				//can use for background that only shows up during active downloads
				//!! text does not appear for workshop downloads leaving only the bg, don't use
			}
		}

		StatusLabel {
		}

		StatusLabelDim [$WINDOWS||$LINUX] { render_bg { 0="fill( x0, y0, x1 - 3, y1, A2Snackbar )" } }
		StatusLabelDim [$OSX] { render_bg { 0="fill( x0, y0, x1, y1, A2Snackbar )" } }
	}

	layout {
		place { control=StatusProgressbar align=bottom width=max height=1 }
		place { control=StatusComplete height=max margin-left=3 align=top-center }

		place { control=StatusPaused,StatusDownloading height=0 width=0 }
	}
}
