resource/layout/overlaydashboard.layout {

	styles {
		overlaymain {
			render_bg {
				0="fill( x0, y0, x1, y0 + 264, Overlay.Bar )"
				1="fill( x0, y0 + 264, x1, y1, Overlay.Background )"
			}
			render {
				0="image_tiled( x0, y0 + 264, x1, y0 + 270, graphics/material/shadow_horiz )"
			}
		}

		OverlayURLLabel {
			textcolor=none
			image="graphics/onfocus/overlay_close"
		}

		OverlayURLLabel:hover {
			image="graphics/onfocus/overlay_close_hover"
		}

		topbar {
			font-family=condensed
			font-size=60
			font-weight=700
			font-style=uppercase
			textcolor=Text.Overlay

			//game name
		}
	}

	layout {
		region { name=overlay height=240 width=max margin-left=80 margin-right=70 }
			place { control=gamename region=overlay align=left y=40 }
			place { control=TaskbarPanel region=overlay width=200 height=max align=right end-right=CloseButton margin-right=50 }
			place { control=CloseButton region=overlay align=right height=40 width=40 y=112 }

		place { control=TopFadePanel,PowerMeterDim,BottomFadePanel,HotkeyLabel,HotkeyExplain height=0 width=0 }
	}
}
